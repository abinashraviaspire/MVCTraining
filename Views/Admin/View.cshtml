@model FirstApp.Models.Admin.UpdateEmployeeViewModel
@{
    Layout=null;
}



@using Microsoft.AspNetCore.Http
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bus Booking</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FirstApp.styles.css" asp-append-version="true" />
</head>
<body style="margin-bottom: 50px;">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-light border-bottom box-shadow mb-3 navbar-red" >
            <div class="container-fluid" >
                @if (User.Identity.IsAuthenticated)
                {
                  <a class="nav-link" asp-area="" asp-controller="Dashboard" asp-action="Index">
                    <img style="width:60px;" src="~/images/bus logo1.png" alt="LOGO">
                </a>
                   
                }
                else
                {
                      <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                    <img style="width:60px;" src="~/images/bus logo1.png" alt="LOGO">
                </a>
                }
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" >
                    <ul class="navbar-nav flex-grow-1">
                         @if(User.Identity.IsAuthenticated){
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="map"><b>Map</b></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Index"><b>Employees</b></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Add"><b>Add Employees</b></a>
                        </li>
                         }
                        </ul>
                        <div>
                            <ul class="navbar-nav flex-grow-1">
                                
                        @if(User.Identity.IsAuthenticated){
                             @* <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Dashboard" asp-action="Index">
                                  <img style="width:20px;" src="~/images/notification.png" alt="notification">
                </a>
                        </li> *@
                            
                            <li class="nav-item">
                            <a class="nav-link text-dark "  style="text-align:right;" asp-controller="Home" asp-action="logOut"><b>Logout</b></a>
                        </li>
                        }
                        else{
                            <li class="nav-item">
                            <a class="nav-link text-dark "  style="text-align:right;" asp-controller="Employee" asp-action="login"><b>Login</b></a>
                        </li>
                        }
                            </ul>
                           
                        </div>
                </div>
            </div>
        </nav>
    </header>


<link rel="stylesheet" href="~/css/login.css" type="text/css" />

	<section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-10 col-lg-5">
					<div class="login-wrap p-4 p-md-5">
		      	<h3 class="text-center mb-4">ADD EMPLOYEE</h3>
						<form method="post">
                    <div class="form-group">
                        <label for="Name" style="color: #855AA6;">Id</label>
		      			<input type="text"asp-for="Id" class="form-control rounded-left" placeholder="Id" readonly>
						@Html.ValidationMessageFor(model=>model.Id,"",new {@class="error"})
						<div asp-validation-for="Id"></div>
		      		</div>



		      		<div class="form-group">
                        <label for="Name" style="color: #855AA6;">Name</label>
		      			<input type="text"asp-for="Name" class="form-control rounded-left" placeholder="Enter Your Name" required>
						@Html.ValidationMessageFor(model=>model.Name,"",new {@class="error"})
						<div asp-validation-for="Name"></div>
		      		</div>

                    <div class="form-group">
                        <label for="Name" style="color: #855AA6;"><E-mail></E-mail></label>
		      			<input type="email"asp-for="Email" class="form-control rounded-left" placeholder="Enter Your Email-ID" required>
						@Html.ValidationMessageFor(model=>model.Email,"",new {@class="error"})
						<div asp-validation-for="Email"></div>
		      		</div>

                    <div class="form-group">
                        <label for="Name" style="color: #855AA6;">Password</label>
		      			<input type="text"asp-for="userPassword" class="form-control rounded-left" placeholder="Enter Your Password" required>
						@Html.ValidationMessageFor(model=>model.userPassword,"",new {@class="error"})
						<div asp-validation-for="userPassword"></div>
		      		</div>
                    <div class="form-group">
                        <label for="Name" style="color: #855AA6;">Date Of Birth</label>
		      			<input type="date"asp-for="DateOfBirth" class="form-control rounded-left" placeholder="Enter Your Date Of Birth" required>
						@Html.ValidationMessageFor(model=>model.DateOfBirth,"",new {@class="error"})
						<div asp-validation-for="DateOfBirth"></div>
		      		</div>

                    <div class="form-group">
                        <label for="Name" style="color: #855AA6;">Department</label>
		      			<input type="text"asp-for="Department" class="form-control rounded-left" placeholder="Enter Your Department" required>
						@Html.ValidationMessageFor(model=>model.Department,"",new {@class="error"})
						<div asp-validation-for="Department"></div>
		      		</div>


	            <div class="form-group">
	<button type="submit" class="btn btn-primary">Save Update</button>
    <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Admin">Delete</button>
	            </div>
	          </form>  
	        </div>
		</div>

			</div>
			
		</div>
		
	</section>
	<script src="js/jquery.min.js"></script>
  <script src="js/popper.js"></script>
  <script src="js/bootstrap.min.js"></script>
  <script src="js/main.js"></script>
</body>




